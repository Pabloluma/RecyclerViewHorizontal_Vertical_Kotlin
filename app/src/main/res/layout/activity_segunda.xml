<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#38403F"
    tools:context=".segunda">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="match_parent"
        android:layout_height="245dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/aerosmith"
        app:civ_border_width="0dp" />

    <TextView
        android:id="@+id/profile_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textSize="25sp"
        android:text="Aerosmith"
        android:textColor="#E0E0E0" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="266dp"
        android:layout_height="78dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="La banda de Boston celebra los 45 años de 'Draw the Line' con una gira mundial
        que pasará por Madrid el próximo 20 de septiembre. No te quedes sin tu entrada!!"
        android:textColor="#E0E0E0" />
</LinearLayout>